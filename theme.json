{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {},
    "spacing": {
			"padding": true,
			"margin": true,
			"units": [ "px", "em", "rem", "vh", "vw", "%" ],
      "spacingScale": {
        "operator": "+",
        "increment": 0.25,
        "steps": 5,
        "mediumStep": 0.75,
        "unit": "rem"
      }
		},
    "typography": {}
  },
  "styles": {
    "spacing": {
			"blockGap": "1.5rem",
			"padding": {
				"top": "var(--wp--preset--spacing--40)",
				"right": "var(--wp--preset--spacing--30)",
				"bottom": "var(--wp--preset--spacing--40)",
				"left": "var(--wp--preset--spacing--30)"
			}
		}
  }
}